<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="imgId"
            type="androidx.lifecycle.LiveData&lt;Integer&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <com.example.testcustomview.RectPointView
            android:background="@color/purple_200"
            android:layout_marginLeft="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:layout_width="200dp"
            android:layout_height="200dp" />

<!--        <FrameLayout-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@id/clip_view"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content">-->

            <TextView
                android:visibility="visible"
                android:id="@+id/tv_scan"
                android:background="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clip_view"
                android:layout_width="100dp"
                android:layout_height="100dp" />

<!--        </FrameLayout>-->

        <com.example.testcustomview.ClipRgnView
            android:id="@+id/clip_view"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="300dp" />

        <Button
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@id/clip_view"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="50dp"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btn"
            app:layout_constraintTop_toBottomOf="@id/button"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content" />

        <com.example.testcustomview.CharTextView
            android:id="@+id/tv_translation"
            android:padding="10dp"
            android:text="ValueAnimator"
            app:layout_constraintTop_toBottomOf="@id/btn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.testcustomview.LoadingImageView
            android:id="@+id/loading"
            android:layout_width="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_translation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="50dp"/>

        <ImageView
            app:imgUrl="@{imgId}"
            android:id="@+id/iv_binding"
            app:layout_constraintTop_toBottomOf="@id/loading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <Button
            android:onClick="@{onClickListener}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            android:onClick="@{onClickListener}"
            android:visibility="gone"
            android:id="@+id/item1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <Button
            android:onClick="@{onClickListener}"
            android:visibility="gone"
            android:id="@+id/item2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <Button
            android:onClick="@{onClickListener}"
            android:visibility="gone"
            android:id="@+id/item3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <Button
            android:onClick="@{onClickListener}"
            android:visibility="gone"
            android:id="@+id/item4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <Button
            android:onClick="@{onClickListener}"
            android:visibility="gone"
            android:id="@+id/item5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <com.example.testcustomview.FlowLayout
            android:id="@+id/flowLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="#00ff00"
                android:layout_width="80dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/purple_200"
                android:layout_width="100dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black"
                android:layout_width="150dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="#ff0000"
                android:layout_width="300dp"
                android:layout_height="10dp"/>

        </com.example.testcustomview.FlowLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>